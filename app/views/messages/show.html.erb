<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
      </tr>
      <tbody>
        <tr>
          <td>
            <%= @message.title %>
          </td>
          <td>
            <%= @message.content %>
          </td>
          <td>
            <small>Created <%= time_ago_in_words(@message.created_at) %> by <%= @message.creator.username %></small>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<br>
<br>
<div class="container">
<div class="col-md-6 col-md-offset-3">
<div class="well well-sm">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <th>
        Reply
      </th>
      <th>
        Author
      </th>
      <% @replies.each do |rep| %>
      <tbody>
        <tr>
          <td>
            <%= rep.content %>
         </td>
         <td>
          <small>
             Created <%= time_ago_in_words(rep.created_at) %>
             by <%= rep.creator.username %>
          </small>
        </td>
       </tr>

      <% end %>
    </table>
  </div>
</div>
</div>
</div>

<div class="col-md-4 col-md-offset-3">
  <div class ="well well-sm">
    <%= form_for [@message, @reply] do |f| %>
      <%= f.text_area :content %>
      <br/>
      <%= f.submit "Create a reply", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
<div class="col-md-4 col-md-offset-5">
  <%= link_to 'back', :back %>
</div>
