<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Author</th>
      </tr>
      <tbody>
        <tr>
          <td>
            <%= @message.title %>
          </td>
          <td>
            <%= @message.content %>
          </td>
          <td>
            <small>Created <%= time_ago_in_words(@message.created_at) %> by <%= @message.creator.username %></small>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="col-md-4 col-md-offset-3">
  <div class ="well well-sm">
    <%= form_for [@message,@reply] do |f| %>
      <%= f.text_area :content %>
      <br/>
      <%= f.submit "Create a reply", class: "btn btn-primary" %>
    <% end %>
  </div>
<div class="col-md-4 col-md-offset-3">
  <%= link_to 'back', :back %>
</div>
