<h1> Welcome back, <%= current_user.username %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-hover">
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th></th>
      </tr>

      <% @messages.each do |msg| %>
      <tbody>
        <tr>
          <td>
            <%= msg.title %>
          </td>
          <td>
            <%= msg.content %>
          </td>
          <td>
            <%= link_to 'Show', message_path(msg) %>
          </td>
        </tr>
      </tbody>
      <p>
        <small>Created <%= time_ago_in_words(msg.created_at) %> by <%= msg.creator.username %></small>
      </p>
      <% end %>
    </table>
  </div>
</div>
<div class="col-md-4 col-md-offset-3">
  <p>
    <%= link_to 'Create a new message', new_message_path %>
  </p>
</div>
